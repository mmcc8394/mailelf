<h1>New User Info</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user do |f| %>
      <% fi = FormItem.new(f) %>

      <%= render partial: 'user_info', locals: { form_item: fi } %>
      <%= render partial: 'password', locals: { form_item: fi } %>
      <%= fi.submit_with_cancel('Make it happen!') %>
    <% end %>
  </div>
</div>