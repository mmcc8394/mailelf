<h1>Campaigns</h1>

<%= link_to 'New Campaign', new_campaign_path, class: 'btn btn-primary mb-3' %>

<% if @campaigns.empty? %>
  <h3 class="mt-3"><i>No campaigns found.</i></h3>
<% else %>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Date Sent</th>
        <th scope="col">Template</th>
        <th scope="col">Emails Queued</th>
      </tr>
    </thead>

    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= campaign.created_at.strftime('%B %-d, %Y @ %l:%M %P') %></td>
          <td><%= campaign.email_template.name %></td>
          <td><%= campaign.emails_queued %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
